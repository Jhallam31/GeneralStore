@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>General Store</h1>
    <p class="lead text-center">Established in 1977, we are a classic general store that takes pride in locally sourced products and foods. </p>
    <p>@Html.ActionLink("Learn More", "About")</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <p>
            Our General Store, located in rural Indiana, is host to a multitude of fine food and items of distinction.<br />
            Come browse our products and see what we have for you.
        </p>
        <p>@Html.ActionLink("Check Products", "Index", "Product", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
    <div class="col-md-4">
        <h2>Accounts</h2>
        <p>From here you can access individual customer information, edit a customer, or create new one!</p>
        <p>@Html.ActionLink("Customer Home", "Index", "Customer", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
    <div class="col-md-4">
        <h2>Transactions</h2>
        <p>Log transactions by entering date, customer, and product information</p>
        <p>@Html.ActionLink("Transaction Home", "Index", "Transaction", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
</div>